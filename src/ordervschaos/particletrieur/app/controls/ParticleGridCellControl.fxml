<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import ordervschaos.particletrieur.app.controls.ImageViewPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import ordervschaos.particletrieur.app.controls.SymbolLabel?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<fx:root stylesheets="@../resources/styles/style.css" type="javafx.scene.layout.BorderPane"
         xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <HBox>
            <padding>
                <Insets topRightBottomLeft="4"/>
            </padding>
            <VBox>
                <Label fx:id="labelId" text="Index"/>
                <Label fx:id="labelClassification" text="Classification"/>
            </VBox>
            <Pane HBox.hgrow="ALWAYS"/>
            <StackPane fx:id="validated" >
                <Circle radius="14" style="-fx-fill: -fx-background;"/>
                <SymbolLabel fx:id="symbolLabelValidated"
                             symbol="feathercheckcircle"
                             symbolColor="green"
                             symbolSize="20">
                        <StackPane.margin>
                            <Insets top="-1"/>
                        </StackPane.margin>
                </SymbolLabel>
            </StackPane>
        </HBox>
    </top>
    <center>
        <ImageViewPane fx:id="imageViewPane">
            <imageView>
                <ImageView fx:id="imageView"
                           pickOnBounds="true"
                           preserveRatio="true"/>
            </imageView>
        </ImageViewPane>
    </center>
</fx:root>
