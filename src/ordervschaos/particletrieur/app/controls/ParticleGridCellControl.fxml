<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import ordervschaos.particletrieur.app.controls.ImageViewPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import ordervschaos.particletrieur.app.controls.SymbolLabel?>
<fx:root stylesheets="@../styles/style.css" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox spacing="3.0" AnchorPane.bottomAnchor="3.0" AnchorPane.leftAnchor="3.0" AnchorPane.rightAnchor="3.0" AnchorPane.topAnchor="3.0">
            <children>
                <HBox>
                    <VBox>
                        <Label fx:id="labelId" text="Index" />
                        <Label fx:id="labelClassification" text="Classification" />
                    </VBox>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <SymbolLabel fx:id="symbolLabelValidated"
                                 symbol="feathercheckcircle"
                                 symbolColor="green"
                                 symbolSize="16"/>
                </HBox>
            <StackPane>
               <children>
                   <ImageViewPane>
                       <imageView>
                           <ImageView fx:id="imageView"
                                      pickOnBounds="true"
                                      preserveRatio="true" />
                       </imageView>
                   </ImageViewPane>
               </children>
            </StackPane>
            </children>
        </VBox>
    </children>
</fx:root>
